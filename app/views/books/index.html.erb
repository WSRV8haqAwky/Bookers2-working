<main>
  <p id="notice"><%= flash[:notice] %></p>
    <% if @book.errors.any? %>
      <div id="error explanation">
        <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>

  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "default-image.jpg" %> <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th>DMM太郎</th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
          <!-- 編集リンクが未実装 -->
        </div>
        <h2 class="mt-3">New book</h2>
         <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
           <label for="book title">Title</label>
           <%= f.text_field :title, class: "form-control book-title" %>
          </div>
          <div class="form-group">
           <label for="book_opnion">Opinion</label>
           <%= f.text_area :body,class: "form-control book-body" %>
          </div>
          <div class="form-group">
           <%= f.submit 'Create Book',class: "btn btn-sucsess btn-sm btn-block create_book" %>
          </div>
         <% end %>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>Books</h2>
        <!-- 投稿した書籍一覧表示を作成しましょう。 -->
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <% @books.each do |book| %>
            <td><%= image_tag('default-image.jpg') %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

